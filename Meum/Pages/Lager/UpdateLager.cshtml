@page "{id:int}"
@model Meum.Pages.Lager.UpdateLagerModel
@{
}

<h1>Opdatere et produkt på lager</h1>

@if (!string.IsNullOrWhiteSpace(@Model.ErrorMessage))
{
    <h2 class="alert-danger">@Model.ErrorMessage</h2>
}

else
{
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label>Varenummer</label>
                    <input type="text" asp-for="@Model.Lager.VareNummer" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Navn</label>
                    <input type="text" asp-for="@Model.Lager.Navn" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label>Beskrivelse</label>
                    <input type="text" asp-for="@Model.Lager.Beskrivelse" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label>Antal</label>
                    <input type="text" asp-for="@Model.Lager.Antal" class="form-control" required/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Opdater Lager" class="btn btn-primary" />
                    <a asp-page="/Lager/Lager" class="btn-link">
                        <input value="Tilbage" class="btn btn-primary" />
                    </a>
                </div>
            </form> 
        </div>
    </div>
}
