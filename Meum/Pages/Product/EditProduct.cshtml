@page "{id:int}"
@model Meum.Pages.Product.EditProductModel
@{
}

<h1>Opdatere et produkt</h1>

@if (!string.IsNullOrWhiteSpace(@Model.ErrorMessage))
{
    <h2 class="alert-danger">@Model.ErrorMessage</h2>
}

else
{
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label>Varenummer</label>
                    <input type="text" asp-for="@Model.Produkt.VareNummer" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Produkt navn</label>
                    <input type="text" asp-for="@Model.Produkt.ProduktNavn" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Beskrivelse</label>
                    <input type="text" asp-for="@Model.Produkt.Beskrivelse" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Pris</label>
                    <input type="text" asp-for="@Model.Produkt.Pris" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input type="text" asp-for="@Model.Produkt.Image" class="form-control" required />
                </div>
                <div class="form-group">
                    <input type="submit" value="Opdater Lager" class="btn btn-primary" />
                    <a asp-page="/Product/Products" class="btn-link">
                        <input value="Tilbage" class="btn btn-primary" />
                    </a>
                </div>
            </form>
        </div>
    </div>
}
