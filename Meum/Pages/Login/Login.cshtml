@page
@model Meum.Pages.Login.LoginModel
@{
}



<div class="container" style="margin-top: 50px;">
    <div>
        <h1 style="color: #b59169; font-size: 120px;" class="offset-4">Meum</h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-login" style="background-color: #d1bfa5; height: 300px;">

                <div class="panel-body" style="margin-top: 60px;">
                    <div class="row">
                        <div class="col-lg-12">
                            <form method="post">
                                <div class="form-group">
                                    <div class="offset-3" style="color: red;">
                                        @Model.Message
                                    </div>
                                    <input asp-for="UserName" style="border: 3px solid #b59169;" class="form-control col-6 offset-3" placeholder="Username" value="">
                                </div>
                                <div class="form-group">

                                    <input asp-for="Password" style="border: 3px solid #b59169;" class="form-control  col-6 offset-3" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-2 col-sm-offset-5">
                                            <button class="form-control btn btn-login" style="background-color: #b59169; color: white;">Log In </button>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>